<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game1p">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="539dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/constraintLayout">
        <com.mkl.pnog.DrawView android:layout_width="match_parent" android:layout_height="match_parent"
                               android:id="@+id/dV"
                               tools:layout_editor_absoluteX="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLeftDown"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonRightDown" android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            android:textAlignment="center" android:textSize="30sp" style="@android:style/Widget.Holo.Button"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRightDown" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/buttonLeftDown" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold" android:textAlignment="center"
            android:textSize="30sp" style="@android:style/Widget.Holo.Button"/>
</android.support.constraint.ConstraintLayout>