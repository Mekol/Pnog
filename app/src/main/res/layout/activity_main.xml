<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="715dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <Button
                android:text="1 Player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1p" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button2p"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/buttonExit"
        />
        <Button
                android:text="2 Players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2p"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/button1p"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/buttonExit"/>
        <Button
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonExit" android:layout_marginBottom="100dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>